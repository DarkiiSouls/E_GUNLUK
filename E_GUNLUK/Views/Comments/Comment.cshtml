@model E_GUNLUK.Models.Comments

@{
    Layout = null;
}

@using (@Html.BeginForm())

{
    @Html.AntiForgeryToken()

<h4>Add your comment</h4>
<div>
    @Html.TextAreaFor(model => model.theComment)
</div>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Create" action="@Url.Action("Comment", "Notes")" class="btn btn-default" />
    </div>
</div>

}

