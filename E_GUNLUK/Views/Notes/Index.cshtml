@model IEnumerable<E_GUNLUK.Models.Note>

@{
    ViewBag.Title = "Index";
}

@{ 
    if (Model.ToList().Count() == 0)
    {
        <h1>There are no notes!</h1>

    }
    else
    {
        <h6>Notes Written: @Model.ToList().Count()</h6>
        foreach (var item in Model)
        {
            <div class="tc-ch">
                <div class="tch-img">
                    <a href="#"><img src="~/Content/images/1.jpg" class="img-responsive" alt="" /></a>
                </div>
                <a class="blog blue" href="#">Technology</a>
                <h3><a href="/Notes/Details/@item.NoteId">@Html.DisplayFor(modelItem => item.Title)</a></h3><span>Published In: @Html.DisplayFor(modelItem => item.NoteDate)| Privacy: @Html.DisplayFor(modelItem => item.PubOrPvt) | By: @Html.DisplayFor(modelItem => item.NoteTaker.Id)</span>

                <p>
                    @Html.DisplayFor(modelItem => item.NoteText)
                </p>
                <div class="blog-poast-info">
                    <ul>
                        <li><i class="glyphicon glyphicon-user"> </i><a class="admin" href="#"> @item.NoteTaker.FirstName @item.NoteTaker.LastName</a></li>
                        <li><i class="glyphicon glyphicon-calendar"> </i>@item.NoteDate</li>
                        <li><i class="glyphicon glyphicon-comment"> </i><a class="p-blog" href="#">n Comments </a></li>
                        <li><i class="glyphicon glyphicon-heart"> </i><a class="admin" href="#">n favourites </a></li>
                    </ul>
                </div>
                <span class="glyphicon glyphicon-edit">@Html.ActionLink("Edit", "Edit", new { id = item.NoteId })</span>&nbsp;
                <span class="glyphicon glyphicon-remove"> @Html.ActionLink("Delete", "Delete", new { id = item.NoteId })</span>

            </div>
        }
        <hr />


    }
}

